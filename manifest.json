{
  "name": "__MSG_extName__",
  "version": "0.2.2",
  "manifest_version": 2,
  "description": "__MSG_extDescription__",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "__MSG_extAction__"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/avim.js",
        "scripts/extension.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "default_locale": "en",
  "background": {
    "scripts": [
      "chrome/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
